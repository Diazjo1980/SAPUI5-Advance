<mvc:View xmlns:layout="sap.ui.layout" controllerName="logaligroup.employees.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f">

	<Shell id="shell">
		<App id="app">
			<pages>
                <Page id="_IDGenPage1" showHeader="false">
                    <content>
                        <f:FlexibleColumnLayout id="fcl" backgroundDesign="Solid" layout="{jsonLayout>/ActiveKey}">
                            <f:beginColumnPages>
                                <mvc:XMLView id="masterEmployeeView" viewName="logaligroup.employees.view.MasterEmployee"></mvc:XMLView>
                            </f:beginColumnPages>
                        
                            <f:midColumnPages>
                                <mvc:XMLView id="employeeDetailsView" viewName="logaligroup.employees.view.EmployeeDetails"></mvc:XMLView>
                            </f:midColumnPages>

                            <f:endColumnPages>
                                <Page id="_IDGenPage2" >
                                </Page>
                            </f:endColumnPages>
                        </f:FlexibleColumnLayout>
                    </content>
                    <footer>
                        <Toolbar id="_IDGenToolbar1" >
                            <Label id="_IDGenLabel1" text="{i18n>layout}" class="sapUiSmallMargin"/>
                            <Select id="_IDGenSelect1" items="{jsonLayout>/Layout}" selectedKey="{jsonLayout>/ActiveKey}">
                                <core:Item id="_IDGenItem1" key="{jsonLayout>Key}" text="{jsonLayout>Text}"></core:Item>
                            </Select>
                        </Toolbar>
                    </footer>
                </Page>
			</pages>
		</App>
	</Shell>
</mvc:View>