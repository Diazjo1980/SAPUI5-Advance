<mvc:View controllerName="logaligroup.Lists.controller.ListTypes" 
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core" 
     xmlns:layout="sap.ui.layout"
    xmlns="sap.m"
    displayBlock="true" >
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
                        <IconTabBar >
                            <items>
                                <IconTabFilter text="{i18n>objectListItems}">
                                    <List items="{path : '/Products',
                                                  filters : [{
                                                      path : 'Brand',
                                                      operator : 'EQ',
                                                      value1 : 'Compaq'
                                                  }]}">
                                        <items>
                                            <ObjectListItem title="{Material} {Brand} {Model}"
                                                            number="{Price}"
                                                            numberUnit="{Currency}"
                                                            type="Detail">
                                                <ObjectAttribute text="{Brand}"/>
                                                <ObjectAttribute text="{Weight}"/>                                                            
                                            </ObjectListItem>
                                        </items>
                                    </List>
                                </IconTabFilter>

                                <IconTabFilter text="{i18n>standardListItem}">
                                    <Select selectedKey="{/typeSelection}">
                                        <items>
                                            <core:Item key="None" text="{i18n>none}"/>
                                            <core:Item key="MultiSelect" text="{i18n>multiSelect}"/>
                                            <core:Item key="SingleSelect" text="{i18n>singleSelect}"/>
                                            <core:Item key="SingleSelectLeft" text="{i18n>singleSelectLeft}"/>
                                            <core:Item key="SingleSelectMaster" text="{i18n>singleSelectMaster}"/>
                                        </items>
                                    </Select>
                                    <Button text="{i18n>showSelectedItems}" 
                                            press="onShowSelectedItems"
                                            class="sapUiSmallMarginBegin"/> 

                                    <Button text="{i18n>deleteItems}" 
                                            press="onDeleteSelectedItems"
                                            class="sapUiSmallMarginBegin"/>                                               
                                    <List id="standardList" items="{path: '/Products',
                                                  sorter : {
                                                      path : 'Brand',
                                                      descending : false,
                                                      group : true
                                                  }, 
                                                  groupHeaderFactory : '.getGroupHeader'}"
                                            mode="{/typeSelection}">                                        
                                        <items>
                                            <StandardListItem title="{Material} {Brand} {Model}"
                                                              description="{Weight}"
                                                              info="{Price} {Currency}"
                                                              type="Active"/>
                                        </items>
                                    </List>
                                </IconTabFilter>

                                <IconTabFilter text="{i18n>inputListItem}">
                                    <List items="{/Products}" mode="Delete" delete="onDeleteInputRow">
                                        <items>
                                            <InputListItem label="{Brand}">
                                                <Select items="{Properties}">
                                                    <core:Item key="{Id}" text="{Text}"/>
                                                </Select>
                                            </InputListItem>
                                        </items>
                                    </List>
                                </IconTabFilter>

                                <IconTabFilter text="{i18n>notificationListItem}">
                                    <List items="{/News}">
                                        <items>
                                            <NotificationListItem title="{Title}"
                                                                  description="{Description}"
                                                                  unread="{Unread}"
                                                                  authorName="{Author}"
                                                                  priority="{Priority}"
                                                                  showCloseButton="{ShowCloseButton}"/>                                            
                                        </items>
                                    </List>
                                </IconTabFilter>

                                <IconTabFilter text="{i18n>customListItem}">
                                    <List items="{/News}">
                                        <items>
                                            <CustomListItem >
                                                <layout:Grid defaultSpan="XL3 L3 M6 S12">
                                                    <Text text="{Title}"/>
                                                    <Text text="{Description}"/>
                                                    <Text text="{Author}"/>                                                
                                                </layout:Grid>
                                            </CustomListItem>
                                        </items>
                                    </List>
                                </IconTabFilter>
                            </items>
                        </IconTabBar>
                    </content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
